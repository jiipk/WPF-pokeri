<Window x:Class="AboutDialog.AboutIkkuna"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:AboutDialog.Properties"
        Title="{x:Static properties:Resources.labelOtsikko}" Height="250" Width="400" Background="Black" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFEFEFFC">
        <StackPanel Height="Auto" HorizontalAlignment="Stretch" Margin="0,10,0,0" Name="stackPanelAbout" VerticalAlignment="Stretch" Width="Auto" >
            <Label Content="Pokeripeli" Height="Auto" Name="labelNimi" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold" />
            <Label Content="{x:Static properties:Resources.labelVersio}" Height="Auto" Name="labelVersio" HorizontalAlignment="Center" FontSize="16" />
            <Label Content="16.12.2012" Height="Auto" Name="labelPaivays" HorizontalAlignment="Center" FontSize="16" />
        </StackPanel>
        <Button Content="{x:Static properties:Resources.buttonSulje}" Height="23" HorizontalAlignment="Center" Margin="0,0,0,10" Name="buttonSulje" VerticalAlignment="Bottom" Width="75" Click="buttonSulje_Click" IsDefault="True" />
    </Grid>
</Window>
