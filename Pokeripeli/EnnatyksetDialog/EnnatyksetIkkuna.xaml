<Window x:Class="EnnatyksetDialog.EnnatyksetIkkuna"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:EnnatyksetDialog.Properties"
        Title="{x:Static properties:Resources.labelOtsikko}" Height="350" Width="400" WindowStartupLocation="CenterScreen">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Name="ScrollEnnatykset">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Content="{x:Static properties:Resources.labelTieto}" Grid.Row="0" Height="Auto"  FontSize="16" HorizontalAlignment="Stretch" Margin="0" Name="labelTieto" VerticalAlignment="Top" Foreground="#FFBC1000" HorizontalContentAlignment="Center" Background="#FFBEED69" />
            <TextBlock Grid.Row="1" Height="Auto" HorizontalAlignment="Stretch" Margin="10,10,0,0" Name="textBlockEnnatykset" Text="TextBlock" VerticalAlignment="Stretch" FontSize="16" />
            <Button Grid.Row="2" Content="{x:Static properties:Resources.buttonSulje}" Height="23" HorizontalAlignment="Center" Margin="0,0,0,5" Name="buttonSulje" VerticalAlignment="Bottom" Width="75" Click="buttonSulje_Click" IsDefault="True" />
        </Grid>
    </ScrollViewer>
</Window>
